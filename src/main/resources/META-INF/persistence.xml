<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="gestion_hnb" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.b2la.hnb.models.bilan</class>
        <class>com.b2la.hnb.models.facturation</class>
        <class>com.b2la.hnb.models.utilisateurs</class>
        <class>com.b2la.hnb.models.produits</class>
        <class>com.b2la.hnb.models.commande</class>
        <class>com.b2la.hnb.models.depense</class>
        <class>com.b2la.hnb.models.promotion</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="${mysql.datasource.url}"/>
            <property name="jakarta.persistence.jdbc.user" value="${mysql.datasource.username}"/>
            <property name="jakarta.persistence.jdbc.password" value="${mysql.datasource.password}"/>
            <property name="jakarta.persistence.jdbc.driver" value="${data.datasource.driver}"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
