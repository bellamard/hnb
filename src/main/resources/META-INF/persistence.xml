<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="gestion_hnb" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.b2la.hnb.models.Bilan</class>
        <class>com.b2la.hnb.models.Facturation</class>
        <class>com.b2la.hnb.models.Utilisateur</class>
        <class>com.b2la.hnb.models.Produit</class>
        <class>com.b2la.hnb.models.Commande</class>
        <class>com.b2la.hnb.models.Depense</class>
        <class>com.b2la.hnb.models.Promotion</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/gestion_hnb?createDatabaseIfNotExist=true"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <property name="hibernate.transaction.jta.platform"
                      value="org.hibernate.engine.transaction.jta.platform.internal.NoJtaPlatform"/>

            <property name="hibernate.allow_reflection_optimization" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
